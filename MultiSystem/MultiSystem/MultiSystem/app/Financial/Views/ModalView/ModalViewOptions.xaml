<Window x:Class="MultiSystem.app.Financial.Views.ModalView.ModalViewOptions"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Opciones" Height="350" Width="350" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="292"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="39"/>
            <RowDefinition Height="237"/>
            <RowDefinition Height="35"/>
        </Grid.RowDefinitions>
        <Label Content="SELECCIONE LA OPCIÓN  DESEADA" HorizontalAlignment="Left" Margin="48,10,0,0" VerticalAlignment="Top" Width="235" Height="26" FontWeight="Bold"/>
        <TextBlock x:Name="dataServiceToEdit" TextAlignment="Center" HorizontalAlignment="Left" Margin="38,10,0,0" Grid.Row="1" TextWrapping="Wrap" Text="TextBlock" VerticalAlignment="Top" Height="203" Width="255"/>
        <Button Content="Editar" Width="80" Height="25" Background="#FF065523" Foreground="White" Grid.Row="2" HorizontalAlignment="Right"  VerticalAlignment="Top" Click="edit" Margin="0,0,-39,0" />
        <Button Content="Eliminar" Width="80" Height="25" Background="#FF890707" Foreground="White" Grid.Row="2" HorizontalAlignment="Left"  VerticalAlignment="Top" Click="delete" Margin="10,0,0,0" />

    </Grid>
</Window>
