<Window x:Class="MultiSystem.app.Library.Views.Options.RefundBookOptions"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Devolución de libros" Height="400" Width="450" ResizeMode="NoResize" Icon="/MultiSystem;component/app/Library/Views/Home/michoacan.png" WindowStartupLocation="CenterScreen">
    <Grid>
    	<Grid.ColumnDefinitions>
    		<ColumnDefinition Width="304"/>
    		<ColumnDefinition Width="140"/>
    	</Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="44"/>
            <RowDefinition Height="265"/>
            <RowDefinition Height="62"/>
        </Grid.RowDefinitions>
        <TextBlock HorizontalAlignment="Center" TextAlignment="Center" TextWrapping="Wrap" VerticalAlignment="Center" Height="33" Width="444" FontFamily="Arial Black" FontSize="16" Grid.ColumnSpan="2" Margin="0,5.5" ><Run Language="es-mx" Text="DEVOLUCIÓN DE LIBROS"/></TextBlock>

        <TextBlock x:Name="containerRefundBook" HorizontalAlignment="Center" TextAlignment="Center" TextWrapping="Wrap" Text="ASD" VerticalAlignment="Center" Height="265" Width="444" FontFamily="Cambria" FontSize="16" Grid.ColumnSpan="2" Grid.Row="1"/>
        <Button Content="Executar" Width="120" Height="30" Background="#FF065523" Foreground="White" Grid.Row="2" HorizontalAlignment="Left"  VerticalAlignment="Top" Grid.Column="1" Click="executeRefunds"/>

    </Grid>
</Window>
