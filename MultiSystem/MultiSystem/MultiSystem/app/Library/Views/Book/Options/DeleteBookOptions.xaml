<Window x:Class="MultiSystem.app.Library.Views.Options.DeleteBookOptions"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="DeleteBookOptions" Height="400" Width="500">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition/>
            <RowDefinition Height="44"/>
        </Grid.RowDefinitions>
        <Label Content="Estás seguro que deseas eliminarlo?" HorizontalAlignment="Left" Margin="70,10,0,0" VerticalAlignment="Top" FontSize="18" FontFamily="Arial Black"/>
        <TextBlock HorizontalAlignment="Left" Name="containerText" TextAlignment="Center" Margin="92,43,0,0" Grid.Row="1" TextWrapping="Wrap" Text="TextBlock" VerticalAlignment="Top" Height="161" Width="296" FontFamily="Arial Black"/>
        <Button Content="Eliminar" Width="120" Height="30" Background="#FF065523" Foreground="White" Grid.Row="2" HorizontalAlignment="Right" VerticalAlignment="Center"  Click="deleteBook" Margin="0,5,10,9"/>
        <Button Content="Cancelar" HorizontalAlignment="Left" Grid.Row="2" VerticalAlignment="Center" Width="120" Height="30" Click="cancel" Background="#FF890707" Foreground="White" FontSize="14" Margin="10,4,0,10" />

    </Grid>
</Window>
