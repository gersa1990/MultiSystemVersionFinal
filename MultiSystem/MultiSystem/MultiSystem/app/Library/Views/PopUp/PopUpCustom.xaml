<Window x:Class="MultiSystem.app.Library.Views.PopUp.PopUpCustom"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="PopUpCustom" Height="400" Width="450" ResizeMode="NoResize" Icon="/MultiSystem;component/app/Library/Views/Home/michoacan.png" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="37"/>
            <RowDefinition Height="70*"/>
            <RowDefinition Height="42"/>
            <RowDefinition Height="3*"/>
        </Grid.RowDefinitions>
        <Label x:Name="tittle"  Content="EJEMPLO DE TITULO" Grid.Row="0" HorizontalAlignment="Center" VerticalAlignment="Center" Width="377" Height="36" Margin="10,0,57,1" FontSize="24" Foreground="#FF271F74" FontFamily="Stencil"/>
        <Button x:Name="buttonAccept" Content="Aceptar" HorizontalAlignment="Right" Grid.Row="2" VerticalAlignment="Center" Width="120" Height="30" Margin="0,0,10,0" Background="#FF065523" Foreground="White" Click="closePopUp"/>
        <TextBlock TextAlignment="Center" x:Name="container" HorizontalAlignment="Center" Grid.Row="1" TextWrapping="Wrap" Text="TextBlock" VerticalAlignment="Center" Height="260" Width="370" FontFamily="Arial Black" Margin="37,10"/>
        <Image x:Name="imageAlert" HorizontalAlignment="Right" Grid.Row="0" Height="36" VerticalAlignment="Top" Width="42" Source="/MultiSystem;component/app/Resources/Alert.png" Margin="0,0,10,0"/>

    </Grid>
</Window>
